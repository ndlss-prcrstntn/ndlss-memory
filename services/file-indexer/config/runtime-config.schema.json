{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RuntimeConfig",
  "type": "object",
  "required": [
    "INDEX_MODE",
    "INDEX_FILE_TYPES",
    "INDEX_EXCLUDE_PATTERNS",
    "INDEX_MAX_FILE_SIZE_BYTES",
    "INDEX_PROGRESS_INTERVAL_SECONDS",
    "INGESTION_CHUNK_SIZE",
    "INGESTION_CHUNK_OVERLAP",
    "INGESTION_RETRY_MAX_ATTEMPTS",
    "INGESTION_RETRY_BACKOFF_SECONDS",
    "IDEMPOTENCY_HASH_ALGORITHM",
    "IDEMPOTENCY_SKIP_UNCHANGED",
    "IDEMPOTENCY_ENABLE_STALE_CLEANUP",
    "COMMAND_ALLOWLIST",
    "COMMAND_TIMEOUT_SECONDS"
  ],
  "properties": {
    "INDEX_MODE": {
      "type": "string",
      "enum": ["full-scan", "delta-after-commit"]
    },
    "INDEX_FILE_TYPES": {
      "type": "string",
      "minLength": 1
    },
    "INDEX_EXCLUDE_PATTERNS": {
      "type": "string"
    },
    "INDEX_MAX_FILE_SIZE_BYTES": {
      "type": "integer",
      "minimum": 1
    },
    "INDEX_PROGRESS_INTERVAL_SECONDS": {
      "type": "integer",
      "minimum": 1
    },
    "INGESTION_CHUNK_SIZE": {
      "type": "integer",
      "minimum": 1
    },
    "INGESTION_CHUNK_OVERLAP": {
      "type": "integer",
      "minimum": 0
    },
    "INGESTION_RETRY_MAX_ATTEMPTS": {
      "type": "integer",
      "minimum": 1
    },
    "INGESTION_RETRY_BACKOFF_SECONDS": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "INGESTION_MAX_CHUNKS_PER_FILE": {
      "type": "integer",
      "minimum": 1
    },
    "IDEMPOTENCY_HASH_ALGORITHM": {
      "type": "string",
      "enum": ["sha256"]
    },
    "IDEMPOTENCY_SKIP_UNCHANGED": {
      "type": "string",
      "enum": ["0", "1"]
    },
    "IDEMPOTENCY_ENABLE_STALE_CLEANUP": {
      "type": "string",
      "enum": ["0", "1"]
    },
    "IDEMPOTENCY_MAX_DELETE_BATCH": {
      "type": "integer",
      "minimum": 1
    },
    "COMMAND_ALLOWLIST": {
      "type": "string"
    },
    "COMMAND_TIMEOUT_SECONDS": {
      "type": "integer",
      "minimum": 1
    }
  }
}
